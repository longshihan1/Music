<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.longshihan.lightly.music.fragment.PersonFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/udyu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_230"
            android:background="@color/hei"
            android:text="peoson"/>


        <com.longshihan.lightly.music.view.ColumnHorizontalScrollView
            android:id="@+id/person_title"
            android:layout_width="247dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_below="@+id/udyu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-20dp"
            android:background="@color/Write"
            android:translationZ="@dimen/dimen_7"

            />

        <android.support.v4.view.ViewPager
            android:id="@+id/person_viewpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/udyu"
            android:layout_gravity="center">
        </android.support.v4.view.ViewPager>

    </RelativeLayout>


</android.support.v7.widget.CardView>
